public String aOrAn(String word) {
Set<String> vowels = new Set<String>{'a','e','i','o','u'};

String finalVowel;

List<String> wordList = new List<String>();

  wordList = word.getChars();

      if(vowels.contains(wordList[0])){
          finalVowel = 'an'+ ' '+word;
      }else{
          finalVowel = 'a'+ ' '+word;
      }
          return finalVowel;
}